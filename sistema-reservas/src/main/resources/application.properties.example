# Nombre de la aplicación
spring.application.name=sistema-reservas

# Configuración de la base de datos
# URL de conexión:
spring.datasource.url=jdbc:mysql://<host>:<puerto>/<nombre_base_de_datos>
# Nombre de usuario:
spring.datasource.username=<usuario>
# Contraseña:
spring.datasource.password=<contraseña>
# Driver JDBC para MySQL
spring.datasource.driver-class-name=com.mysql.cj.jdbc.Driver

# Configuración de Hibernate
# Dialecto específico para trabajar con MySQL
spring.jpa.database-platform=org.hibernate.dialect.MySQLDialect
# Usar una estrategia estándar para nombrar las tablas y columnas
spring.jpa.hibernate.naming.physical-strategy=org.hibernate.boot.model.naming.PhysicalNamingStrategyStandardImpl
# Desactivar las modificaciones automáticas de a base de datos
spring.jpa.hibernate.ddl-auto=validate
# Mostrar las consultas SQL en la consola
spring.jpa.show-sql=true


